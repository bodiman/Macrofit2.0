{
    "compilerOptions": {
        "target": "ES2020",                  // or higher
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],                   // <--- add this
        "types": ["node", "jest"],                   // <--- and this
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["./utils/*"],
            "@shared/*": ["./../shared/*"]
        }
    }
}